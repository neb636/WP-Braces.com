<section class="row section form-area greyish">
	<div class="row-content ">
		<div class="section-title"><h2>Build Theme</h2></div>
		<div class="column full">
			<form  id="braces-form" name="example_form" class="build-form contact-section" method="post" action="/basetheme" data-validate="parsley">

				<div class="question">
					<label>What is your themes name?</label>
					<input class="name plain buffer" type="text" name="theme_name" data-parsley-required="true">
				</div>

				<div class="question">
					<label>What is the theme author name?</label>
					<input required class="name plain buffer" type="text" name="author_name" data-parsley-required="true">
				</div>

				<div class="question">
					<label>What is the theme authors URL?</label>
					<input required class="name plain buffer" type="text" name="url" data-parsley-required="true" data-parsley-type="url">
				</div>

				<div class="question">
					<label>What should the prefix for your project be?</label>
					<input required class="name plain buffer" type="text" name="prefix" data-parsley-minlength="3" data-parsley-required="true" data-parsley-pattern="/^[a-z][a-z_]+[a-z]$/">
					<span class="form-comments">At least three characters, first and last characters letters only, letters and _'s for the rest</span>
				</div>

				<div class="question full">
					<label>Please list your themes description</label>
					<textarea class="plain" name="description"></textarea>
				</div>

				<div class="question">
					<label>Will this theme need language support?</label>
					<div class="radio">
						<input required type="radio" name="language_support" value="yes" data-parsley-required="true">Yes
						<input required type="radio" name="language_support" value="no" data-parsley-required="true">No
					</div>
				</div>

				<!-- <div class="question">
					<label>Will you need a custom post type for this theme?</label>
					<div class="radio">
						<input id="cpt-yes" type="radio" name="custom_post_types" value="Yes">Yes
						<input type="radio" name="custom_post_types" value="No">No
					</div>
				</div>

				<div id="cpt-number-wrapper" class="question cpt-number">
					<label>How many Custom Post Types do you need?</label>
					<div class="radio">
						<input required id="cpt-number" class="name plain buffer" type="text" name="cpt_number" data-parsley-required="true" data-parsley-type="number">
					</div>
				</div>

				<div id="cpt-name-wrapper"></div> -->

				<div class="question">
					<label>Would you like to use SASS with this theme?</label>
					<div class="radio">
						<input required id="sass-yes" type="radio" name="sass" value="yes" data-parsley-required="true">Yes
						<input required type="radio" name="sass" value="no" data-parsley-required="true">No
					</div>
				</div>

				<div id="compass" class="question compass">
					<label>Would you like to use Compass?</label>
					<div class="radio">
						<input type="radio" name="compass" value="yes">Yes
						<input type="radio" name="compass" value="no">No
					</div>
				</div>

				<div class="question">
					<label>Would you like to use Gulp with this theme?</label>
					<div class="radio">
						<input required type="radio" name="gulp" value="yes" data-parsley-required="true">Yes
						<input required type="radio" name="gulp" value="no" data-parsley-required="true">No
					</div>
				</div>

				<input id="send" class="plain button red" type="submit" value="Download Now" onclick="javascript:$('#braces-form').parsley( 'validate' );">

			</form>
			<div id="success"></div>
		</div>
	</div>
</section>